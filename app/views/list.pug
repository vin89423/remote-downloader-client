  #alert-modal.modal.fade(tabindex='-1')
    .modal-dialog
        .modal-content
          .modal-header
            button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
          .modal-body
          .modal-footer
            button.btn.btn-outline-secondary(type='button' data-bs-dismiss='modal') Close

  #add-mission-modal.modal.fade(tabindex='-1')
    .modal-dialog
      form.modal-content(action=baseUrl('relay/mission/create') method='post')
        .modal-header
          h5.modal-title Add download mission
          button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
        .modal-body
          .form-floating.mb-3
            input#floatingInputUrl.form-control(type='url' name='url' placeholder='https://.....')
            label(for='floatingInputUrl') URL
            .invalid-feedback Please enter download URL
          .form-floating.mb-3
            input#floatingInputFilename.form-control(type='text' name='filename' placeholder='Filename')
            label(for='floatingInputFilename') Filename
        .modal-footer
          button.btn.btn-outline-secondary(type='button' data-bs-dismiss='modal') Close
          button.btn.btn-primary(type='submit')
            i.fas.fa-download.me-1
            | Start Download

  #remove-all-modal.modal.fade(tabindex='-1')
    .modal-dialog
      form.modal-content(action=baseUrl('relay/mission/remove-all') method='post')
        .modal-header
          h5.modal-title Confirm to remove all mission
          button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
        .modal-body
          p Do you confirm to remove all mission ?
        .modal-footer
          button.btn.btn-outline-secondary(type='button' data-bs-dismiss='modal') No
          button.btn.btn-danger(type='submit')
            i.fas.fa-trash.me-1
            | Confirm remove